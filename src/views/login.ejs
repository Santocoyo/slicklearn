<!-- Modular header included in /views/partials -->
        <%- include("./partials/header.ejs") -%>
        <!-- <%- include("../components/navbar.ejs") -%> -->

        <app id="root">
            <div class="container">
                <div class="form">
                    <h1>Login</h1>

                    <div id="alert-box"></div>

                    <div class="form-group">
                        <input id="email-input" class="form-control" type="email" placeholder="Tu correo electrónico">
                    </div>

                    <div class="form-group">
                        <input id="password-input" class="form-control" type="password" placeholder="Tu Contraseña">
                    </div>

                    <div class="form-group">
                        <button class="btn btn-primary" onclick="submitLogin()">Login</button>
                    </div>

                    <div class="form-group">
                        <a href="/password_recovery">He olvidado mi contraseña</a>
                    </div>

                    <div class="form-group">
                        <a href="/register">¿No estás registrado aún?</a>
                    </div>
                </div>
            </div>
        </app>

        <script src="/assets/js/app.js"></script>
    </body>
</html>